<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Favorite Dishes

    <a data-toggle="collapse" href="#restaurant_favorite_dishes_new_form">
      Add favorite
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @restaurant.favorite_dishes.each do |favorite| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to favorite, favorite %>

        <% if current_user == favorite.user %>
          <%= link_to favorite, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="restaurant_favorite_dishes_new_form">
        <%= render partial: "restaurants/restaurant_favorite_dishes_new_form" %>
      </div>
    </div>

  </ul>
</div>
