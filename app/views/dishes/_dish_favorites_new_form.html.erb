<%= form_with(model: @favorite, local: true) do |f| %>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <%= f.hidden_field :dish_id, value: @dish.id %>

  <div class="form-group">
    <%= f.label :restaurant_id %>

    <%= f.collection_select :restaurant_id, Restaurant.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.submit "Create favorite", class: "btn btn-block btn-outline-secondary" %>
<% end %>
